<% include ../partials/header %>

<div class="container">
	<div class="row">
		
		<h1 style="text-align:center;">
			EDIT CAMPGROUND <%=campground.name%>
		</h1>
		<div style="width:30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
									<input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]">

				</div>
				<div class="form-group">
									<input class="form-control" type="text"  value="<%=campground.image%>" name="campground[image]">

				</div>
				<div class="form-group">
									<input class="form-control" type="text" value="<%=campground.description%>" name="campground[description]">

				</div>
				<div class="form-group">
									<input class="form-control" type="number" placeholder="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01">

				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-submit btn-block">
					SUBMIT..!!
				</button> 
				</div>
				

		</form>	
		<a href="/campgrounds">GO BACK</a>
		
		</div> 
		 
	</div>

</div>	
<% include ../partials/footer %>
